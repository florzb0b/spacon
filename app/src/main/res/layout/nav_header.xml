<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="178dp"
    android:background="@color/backgroundColorDarkGreen"
    android:orientation="vertical"
    android:weightSum="1"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/nav_header">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nav_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:hint="@string/drawer_header_name_hint"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/holo_green_light"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nav_header_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:hint="@string/drawer_header_email_hint"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/holo_green_light"
            android:textSize="14sp"
            android:textStyle="normal" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/nav_header_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:src="@android:color/holo_green_light"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="1dp" />

</RelativeLayout>