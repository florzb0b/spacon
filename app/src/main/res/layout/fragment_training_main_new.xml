<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5">

        <ImageView
            android:id="@+id/pig_svg_new"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:contentDescription="TODO"
            android:elevation="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pig_svg_new"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:text="22:15"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5">

    <RelativeLayout
        android:id="@+id/training_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/layout_shadow_darkyellow"
        android:elevation="5dp">


       <LinearLayout
           android:id="@+id/training_info_layoutleft"
           android:layout_width="150dp"
           android:layout_height="wrap_content"
           android:layout_marginLeft="15dp"
           android:layout_marginTop="5dp"
           android:orientation="vertical">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Information Meal"
               android:textSize="15dp"
               android:gravity="center_horizontal"
               android:textColor="#FFFFFF"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:background="@color/backgroundColorDarkGreen"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:text="Meal:"
               android:textColor="#FFFFFF"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Chicken Breast"
               android:layout_marginStart="5dp"
               android:textColor="@color/backgroundColorDarkerGreen"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:background="@color/backgroundColorDarkGreen"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:text="Calories Meal:"
               android:textColor="#FFFFFF"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="2500 kcal"
               android:layout_marginStart="5dp"
               android:textColor="@color/backgroundColorDarkerGreen"/>

       </LinearLayout>

        <LinearLayout
            android:id="@+id/training_info_layoutmiddle"
            android:layout_width="2dp"
            android:layout_height="165dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/backgroundColorDarkGreen">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/training_info_layoutright"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Information Training"
                android:gravity="center_horizontal"
                android:textSize="15sp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/backgroundColorDarkGreen"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Sport:"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/training_sport_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Running"
                android:layout_marginStart="5dp"
                android:textColor="@color/backgroundColorDarkerGreen"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/backgroundColorDarkGreen"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Burned Calories:"
                android:textColor="#FFFFFF"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="344 kcal / 2500 kcal"
                android:textColor="@color/backgroundColorDarkerGreen"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/backgroundColorDarkGreen"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Distance:"
                android:textColor="#FFFFFF"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3,12 km"
                android:layout_marginStart="5dp"
                android:textColor="@color/backgroundColorDarkerGreen"/>

        </LinearLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/training_btn_start_new"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/training_info_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/backgroundColorDarkYellow"
            android:translationZ="5dp"
            android:text="Start"
            android:textStyle="bold"/>

    </RelativeLayout>


</LinearLayout>