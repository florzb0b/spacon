            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd = "true"
            android:drawableEnd="@drawable/ic_navigate_next_white_24dp"
            android:text="Next"
            android:textAlignment="center" />
        </RelativeLayout>
