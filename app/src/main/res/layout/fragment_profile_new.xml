<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">


    <ImageView
        android:id="@+id/user_profile_content_photo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/profile_circular_border_imageview"
        android:contentDescription="TODO"
        android:elevation="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground" />

    <RelativeLayout

        android:id="@+id/user_profile_myprofiletag_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_profile_content_photo"
        android:layout_marginTop="15dp"
        android:background="@drawable/layout_shadow"
        android:elevation="5dp">

        <ImageView
            android:id="@+id/user_profile_button_deleteContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:contentDescription="TODO"
            android:src="@drawable/ic_delete_black_24dp" />

        <TextView
            android:id="@+id/user_profile_textview_firstname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="First Name*" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_profile_textview_firstname"
            android:layout_margin="10dp"
            android:text="Last Name*" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_profile_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_profile_myprofiletag_layout"
        android:layout_marginTop="20dp"
        android:background="@drawable/profile_rectangle_border_profiletag_bottom">


        <LinearLayout
            android:id="@+id/user_profile_leftlayout"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_border_right"
            android:orientation="vertical">


            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Age" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="(Date of Birth)*"
                    android:textSize="10dp" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Weight*" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Height*" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Gender*" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_profile_centerlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/user_profile_leftlayout"
            android:orientation="vertical">

            <EditText
                android:id="@+id/user_profile_content_firstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:inputType="text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/user_profile_content_lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:inputType="text"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/user_profile_linearlayout_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_profile_content_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="9dp"
                    android:hint="00" />

                <TextView
                    android:id="@+id/user_profile_content_dateofbirth"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="9dp"
                    android:hint="dd/mm/yyyy" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/user_profile_content_weight"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Weight in kg"
                    android:inputType="number"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="12dp"
                    android:text="kg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/user_profile_content_height"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-1dp"
                    android:hint="Height in cm"
                    android:inputType="number"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="1dp"
                    android:text="cm" />
            </LinearLayout>

            <TextView
                android:id="@+id/user_profile_content_gender"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="7dp"
                android:clickable="true"
                android:focusable="true"
                android:hint="Choose your Gender" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/user_profile_centerlayout"
            android:orientation="vertical">


        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_profile_content_layout"
        android:layout_marginStart="30dp"
        android:text="* Please fill in all fields." />

</RelativeLayout>

